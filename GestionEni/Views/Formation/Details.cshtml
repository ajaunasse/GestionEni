@model GestionEni.Models.Formation

@{
    ViewBag.Title = "Ajout Formation";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<h4 class="header">Détail formation : @Model.libelle</h4>
<a class="waves-effect waves-light btn green" href="#modal1">Créer une session</a>
<a class="waves-effect waves-light btn blue" href="#modal3">Voir les sessions</a>
<hr />
<table class="bordered">
  <tr>
    <th>Id</th>
    <td>@Model.IdFormation</td>
  </tr>
  <tr>
    <th>Libelle</th>
    <td>@Model.libelle</td>
  </tr>
  <tr>
    <th>Description</th>
    <td>@Model.description</td>
  </tr>
   <tr>
    <th>Site</th>
    <td>@Model.Site1.ville | @Model.Site1.adresse - @Model.Site1.codepostal </td>
  </tr>
  <tr>
    <th>Cursus</th>
    <td>@Model.Cursus1.description </td>
  </tr>
</table>

  <div id="modal1" class="modal">
    <div class="modal-content">
      <h4>Modal Header</h4>
      <p>A bunch of text</p>
    </div>
    <div class="modal-footer">
      <a href="#!" class=" modal-action modal-close waves-effect waves-green btn-flat">Agree</a>
    </div>
  </div>
    <div id="modal3" class="modal bottom-sheet" style="z-index: 1003; display: none; opacity: 0; bottom: -100%;">
          <div class="modal-content">
            <h4>Liste des sessions</h4>
            <ul class="collection">
            <li class="collection-item avatar">
                <i class="material-icons circle">class</i>
                <span class="title">Du 01 Mars 2017 au 17 Mars 2017</span>
                <p><b>Formateur : </b> Mark Zuckerberg <br> 
                   <b>Stagiaires : </b> 31

                </p>
                <a href="#!" class="secondary-content btn-floating btn-large waves-effect waves-light red"><i class="material-icons">edit</i></a>
              </li>
            </ul>
          </div>
        </div>

<script>

    $(document).ready(function () {
         $('.modal').modal();
    });
</script>