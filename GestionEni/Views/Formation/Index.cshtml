@model IEnumerable<GestionEni.Models.Formation>
@{
    ViewBag.Title = "Formation";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

        <h4 class="header">Gestion des formation
             <a href="@Url.RouteUrl("create_formation")" class="btn-floating btn waves-effect waves-light red right"><i class="material-icons">add</i></a>
           </h4>
        <hr />
        
          <table class="responsive-table">
                <thead>
                  <tr>
                      <th>#</th>
                      <th>libelle</th>
                      <th>Site</th>
                      <th>Cursus</th>
                      <th>Action</th>
                  </tr>
                </thead>

                <tbody>
                    @if (Model != null &&  Model.Count() > 0)
                    {
                     foreach (GestionEni.Models.Formation f in Model)
                     {
                  <tr>
                    <td>@f.IdFormation</td>
                    <td>@f.libelle</td>
                    <td>@f.Site1.ville</td>
                    <td>@f.Cursus1.libelle</td>
                    <td>   
                       <a class="btn-floating btn blue" href="@Url.RouteUrl("detail_formation", new { id = @f.IdFormation })">
                           <i class="material-icons">search</i>
                        </a> 
                        <a class="btn-floating btn green">
                            <i class="large material-icons">mode_edit</i>
                        </a>
                        <a class="btn-floating btn red">
                            <i class="material-icons">delete</i>
                        </a>

                    </td>

                  </tr>
                     }
                    } else {
                        <tr><td colspan="4"> Aucun résultat</td>  </tr>
                       
                    }
                </tbody>
        </table>
